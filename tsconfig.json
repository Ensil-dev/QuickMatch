{
    "compilerOptions": {
        "target": "es2019",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@quickmatch/ui-components": ["packages/ui-components/src"],
            "@quickmatch/hooks": ["packages/hooks/src"],
            "@quickmatch/types": ["packages/types/src"]
        }
    },
    "exclude": ["node_modules"]
}
